                        </telerik:BarSeries.LabelDefinitions>
                    </telerik:BarSeries>
                </telerik:RadCartesianChart>-->
            </Grid>
        </Border>

        <!--LoadingBar-->
        <telerik:RadBusyIndicator x:Name="LoadingBar" Grid.RowSpan="3" />
    </Grid>
</controls:MetroWindow>

